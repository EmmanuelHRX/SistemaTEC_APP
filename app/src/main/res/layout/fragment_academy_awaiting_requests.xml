<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtAAR_Analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="55dp"
        android:text="ANALISIS ACADEMICO"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutAAR"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/txtAAR_Analysis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtAAR_StudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtAAR_StudentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtAAR_StudentID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="TextView" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtAAR_Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOLICITUD"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutAAR"
        app:layout_constraintStart_toStartOf="@id/linearLayoutAAR"/>

    <TextView
        android:id="@+id/txtAAR_Kardex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="KARDEX"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txtAAR_Request"
        app:layout_constraintTop_toBottomOf="@+id/txtAAR_Request" />

    <Button
        android:id="@+id/btnAAR_Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@color/colorAccent"
        android:text="CARGAR ANALISIS "
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnAcademyAwaitingRequestsValidateAR3"
        app:layout_constraintStart_toStartOf="@+id/txtAAR_Kardex" />

    <Button
        android:id="@+id/btnAcademyAwaitingRequestsValidateAR3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccent"
        android:text=" ENVIAR ANALISIS "
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAAR_Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="REVISAR"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@+id/txtAAR_Request"
        app:layout_constraintEnd_toEndOf="@id/linearLayoutAAR" />

    <Button
        android:id="@+id/btnAAR_Review2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="REVISAR"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/btnAAR_Review"
        app:layout_constraintTop_toTopOf="@+id/txtAAR_Kardex" />

    <TextView
        android:id="@+id/txtAAR_UploadDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOCUMENTO"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnAAR_Upload"
        app:layout_constraintEnd_toEndOf="@+id/btnAAR_Review2" />


</android.support.constraint.ConstraintLayout>