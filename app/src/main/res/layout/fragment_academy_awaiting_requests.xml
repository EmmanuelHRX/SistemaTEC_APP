<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtAAR_Analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="55dp"
        android:text="SOLICITUD DE ANÁLISIS ACADÉMICO"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutAAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_layout_border"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAAR_Analysis">

        <TextView
            android:id="@+id/txtAAR_StudentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="Información del alumno" />

        <TextView
            android:id="@+id/txtAAR_StudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="Nombre" />

        <TextView
            android:id="@+id/txtAAR_StudentID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="Matrícula" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtAAR_Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOLICITUD"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutAAR"
        app:layout_constraintStart_toStartOf="@id/linearLayoutAAR"/>

    <TextView
        android:id="@+id/txtAAR_Kardex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="KARDEX"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txtAAR_Request"
        app:layout_constraintTop_toBottomOf="@+id/txtAAR_Request" />

    <Button
        android:id="@+id/btnAAR_AnalysisCaptrue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@color/colorAccent"
        android:text="CARGAR ANALISIS "
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnAAR_UploadAn"
        app:layout_constraintStart_toStartOf="@+id/txtAAR_Kardex" />

    <Button
        android:id="@+id/btnAAR_UploadAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccent"
        android:text="CONFIRMAR"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAAR_Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="REVISAR"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@+id/txtAAR_Request"
        app:layout_constraintEnd_toEndOf="@id/linearLayoutAAR" />

    <Button
        android:id="@+id/btnAAR_Review2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="REVISAR"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/btnAAR_Review"
        app:layout_constraintTop_toTopOf="@+id/txtAAR_Kardex" />

    <TextView
        android:id="@+id/txtAAR_AnalysisCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carga de análsis"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnAAR_AnalysisCaptrue"
        app:layout_constraintEnd_toEndOf="@+id/btnAAR_Review2"
        app:layout_constraintTop_toTopOf="@+id/btnAAR_AnalysisCaptrue" />

    <TextView
        android:id="@+id/btnAAR_Desc"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_layout_border"
        android:text="Se ha recibido una solicitud de análisis técnico.\nTras la elaboración del análisis técnico académico, cargue el documento y enviélo para continuar con el proceso."
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutAAR"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutAAR"
        app:layout_constraintTop_toBottomOf="@+id/txtAAR_Kardex" />


</android.support.constraint.ConstraintLayout>