<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.Coordinator.FragmentCoordinatorStudentAwaitingRequest">

    <TextView
        android:id="@+id/txtApplicationCoordinatorRequest"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="55dp"
        android:text="SOLICITUD DE CONVALIDACION DE ESTUDIOS"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutCAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rectangle_layout_border"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtApplicationCoordinatorRequest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtCSAR_RequestDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtCSAR_StudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtCSAR_StudentID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    />

    <TextView
        android:id="@+id/txtCSAR_ReviewRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="SOLICITUD"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/linearLayoutCAR"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutCAR" />

    <Button
        android:id="@+id/btnCSAR_Review"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        android:text="REVISAR"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/txtCSAR_ReviewRequest"
        app:layout_constraintEnd_toEndOf="@id/linearLayoutCAR"
         />

    <TextView
        android:id="@+id/txtCSAR_ReviewLib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="COMPROBANTE LIBROS"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/linearLayoutCAR"
        app:layout_constraintTop_toBottomOf="@+id/txtCSAR_ReviewLab" />
    <Button
        android:id="@+id/btnCSAR_Review4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        android:text="REVISAR"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/cardview_dark_background"
        app:layout_constraintTop_toTopOf="@id/txtCSAR_ReviewLib"
        app:layout_constraintEnd_toEndOf="@id/linearLayoutCAR" />

    <TextView
        android:id="@+id/txtCSAR_ReviewLab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="COMPROBANTE LABORATORIO"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/linearLayoutCAR"
        app:layout_constraintTop_toBottomOf="@+id/txtCSAR_Kardex" />
    <Button
        android:id="@+id/btnCSAR_Review3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        android:text="REVISAR"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/linearLayoutCAR"
        app:layout_constraintTop_toTopOf="@id/txtCSAR_ReviewLab"
        />

    <TextView
        android:id="@+id/txtCSAR_Kardex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="KARDEX"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txtCSAR_ReviewLab"
        app:layout_constraintTop_toBottomOf="@+id/txtCSAR_ReviewRequest" />

    <Button
        android:id="@+id/btnCSAR_Confirm"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        android:text="CONFIRMAR"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/btnCSAR_Deny"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutCAR"
        app:layout_constraintTop_toTopOf="@+id/btnCSAR_Deny" />

    <Button
        android:id="@+id/btnCSAR_Deny"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        android:background="@color/colorAccent"
        android:text="rechazar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutCAR" />

    <Button
        android:id="@+id/btnCSAR_Review2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="REVISAR"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutCAR"
        app:layout_constraintTop_toTopOf="@+id/txtCSAR_Kardex" />

    <TextView
        android:id="@+id/txtCSAR_ReviewDesc"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_layout_border"
        android:text="Por lineamiento, se debe cumplir con toda la documentación para proceder con la solicitud.\nRevise la documentación proporcionada por el alumno.\nSe le notificará al alumno solicitante."
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutCAR"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutCAR"
        app:layout_constraintTop_toBottomOf="@+id/txtCSAR_ReviewLib" />

</android.support.constraint.ConstraintLayout>