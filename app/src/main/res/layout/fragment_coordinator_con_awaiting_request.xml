<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.Coordinator.FragmentCoordinatorAnalysisAwaitingRequest" >

    <TextView
        android:id="@+id/txtCCAR_Con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="DOCUMENTO DE CONFORMIDAD"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutCCAR"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_layout_border"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCCAR_Con">

        <TextView
            android:id="@+id/txtCCAR_StudentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtCCAR_StudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtCCAR_StudentID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <TextView
        android:id="@+id/txtCCAR_ReviewCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="CONFORMIDAD"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/linearLayoutCCAR"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutCCAR" />


    <Button
        android:id="@+id/btnCCAR_ReviewCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="REVISAR"
        android:textColor="#FFFFFFFF"
        app:layout_constraintEnd_toEndOf="@id/linearLayoutCCAR"
        app:layout_constraintTop_toTopOf="@id/txtCCAR_ReviewCon" />


    <Button
        android:id="@+id/btnCCAR_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@color/colorPrimary"
        android:text="CONFIRMAR"
        android:textColor="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtCCAR_description"
        android:layout_width="364dp"
        android:layout_height="134dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_layout_border"
        android:text="Para finalizar el proceso, confirme la documentación proporcionada por el alumno solicitante.\nSe le enviará la notificación correspondiente una vez se haya confirmado."
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutCAAR"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutCCAR"
        app:layout_constraintTop_toBottomOf="@+id/txtCCAR_ReviewCon" />

</android.support.constraint.ConstraintLayout>