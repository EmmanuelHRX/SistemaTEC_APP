        <ImageView
            android:id="@+id/img_studentReqStatus_info5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="20dp"
            android:src="@android:drawable/ic_menu_recent_history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_studentReqStatus_info4" />

        <TextView
            android:id="@+id/txt_studentReqStatus_info5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:maxWidth="270dp"
            android:text="Revalidación de materias"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/img_studentReqStatus_info5"
