            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:maxWidth="270dp"
            android:text="Revalidación de materias realizada correctamente"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/img_studentReqStatus_info6"
            app:layout_constraintTop_toTopOf="@+id/img_studentReqStatus_info6" />

        <Button
            android:id="@+id/btn_studentReqStatus_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@color/colorPrimary"
            android:text="Volver"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_studentReqStatus_info6" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>