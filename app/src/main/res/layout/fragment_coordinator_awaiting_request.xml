<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.coordinator.FragmentApplicationCoordinatorRequest">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtApplicationCoordinatorRequest"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="23dp"
            android:text="SOLICITUD DE CONVALIDACION DE ESTUDIOS"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtInformationCoordinatorRequest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtInformationCoordinatorRequest"
            android:layout_width="341dp"
            android:layout_height="475dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.527"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtApplicationCoordinatorRequest" />

        <Button
            android:id="@+id/btnAcceptCoordinatorRequest"
            android:layout_width="185dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="199dp"
            android:background="@color/colorAccent"
            android:text="Aceptar"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/cardview_dark_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtInformationCoordinatorRequest" />

        <Button
            android:id="@+id/btnRejectCoordinatorRequest"
            android:layout_width="185dp"
            android:layout_height="75dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorAccent"
            android:text="Rechazar"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnAcceptCoordinatorRequest"
            app:layout_constraintTop_toBottomOf="@+id/txtInformationCoordinatorRequest" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>